{
  "permissions": {
    "allow": [
      "Read(**)",
      "Bash(pwsh:*)",
      "Bash(Invoke-Pester:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)"
    ],
    "deny": [
      "Read(Config/Settings.json)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/.env)",
      "Bash(Remove-Item -Recurse -Force [A-Z]:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ]
  }
}
